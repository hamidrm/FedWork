<fedwork_cfg num_of_nodes="20" net_port="36322" net_ip="127.0.0.1" eval_criterion="CrossEntropyLoss">
	<dataset type="MNIST">
		<var name="heterogeneous">True</var>
		<var name="non_iid_level">0.4</var>
		<var name="train_batch_size">128</var>
		<var name="test_batch_size">256</var>
		<var name="num_workers">1</var>
		<var name="save_graph">True</var>
		<var name="enclosed_info">True</var>
	</dataset>

	<localclients learning_rate="0.001" momentum="0.9" weight_decay="1e-7">20</localclients>

	<method type="FedAvg" platform="cpu">
		<arch type="FeedForwardNet1">
			<var name="ActivationFunction">relu</var>
			<var name="NumberOfHiddenNodes">1024</var>
		</arch>
		<var name="epochs_num">6</var>
	</method>
	<method type="FedPoll" platform="gpu">
		<arch type="FeedForwardNet1">
			<var name="ActivationFunction">ReLU</var>
			<var name="NumberOfHiddenNodes">1024</var>
		</arch>
		<var name="epochs_num">5</var>
	</method>
	<report save_log="True" log_over_net="127.0.0.1,23456">
		<fig name="network_usage_srv_rcv_t" x_axis="Time" y_axis="ServerDataRecvBytes" methods="FedAvg,FedPoll" />
		<fig name="network_usage_srv_rcv_r" x_axis="Round" y_axis="ServerDataRecvBytes" methods="FedAvg" />
	</report>
</fedwork_cfg>
