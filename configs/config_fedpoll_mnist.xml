<fedwork_cfg name="fedpoll_benchmark" num_of_nodes="10" net_port="31145" net_ip="127.0.0.1" eval_criterion="CrossEntropyLoss" num_of_rounds="30">
	<dataset type="MNIST">
		<var name="heterogeneous">False</var>
		<var name="non_iid_level">0.1</var>
		<var name="train_batch_size">128</var>
		<var name="test_batch_size">256</var>
		<var name="num_workers">0</var>
		<var name="save_graph">True</var>
		<var name="enclosed_info">False</var>
	</dataset>

	<localclients learning_rate="0.001" momentum="0.9" weight_decay="1e-7" optimizer="SGD" platform="cpu">10</localclients>
	<method name="asfaf" type="FedPoll" platform="cpu">
		<arch type="FeedForwardNet1">
			<var name="ActivationFunction">relu</var>
			<var name="NumberOfHiddenNodes">1024</var>
		</arch>
		<var name="epochs_num">3</var>
		<var name="args">no_r=8,initial_radius=0.005,contributors_percent=30</var>
	</method>
	<report save_log="True" log_over_net="127.0.0.1,23456">
		<fig name="bits_effect" caption="Evaluation Accuracy" x_axis="round" y_axis="EvaluationAccuracy" methods="FedPollN2bMethodMNIST,FedPollN3bMethodMNIST,FedPollN4bMethodMNIST,FedPollN5bMethodMNIST" x_axis_title="Round" y_axis_title="Accuracy %" labels="FedPoll-Nearest (K=4),FedPoll-Nearest (K=8),FedPoll-Nearest (K=16)" y_axis_scale = "100" />
		<fig name="network_usage_srv_rcv_t" caption="" x_axis="time" y_axis="ServerDataRecvBytes" methods="FedPollNMethodMNIST,FedPollMethodMNIST,FedAvgMethodMNIST,FedAvgQQSGDMethodMNIST" x_axis_title="Time(s)"  y_axis_title="Server Data Received (MB)" x_axis_scale = "1" y_axis_scale = "0.000001" labels="FedPoll-N,FedPoll-MM,FedAvg,FedAvg-QSG"/>
		<fig name="accuracy" caption="Evaluation Accuracy" x_axis="round" y_axis="EvaluationAccuracy" methods="FedPollNMethodMNIST,FedPollMethodMNIST,FedAvgMethodMNIST,FedAvgQQSGDMethodMNIST" x_axis_title="Round" y_axis_title="Accuracy %" labels="FedPoll-N,FedPoll-MM,FedAvg,FedAvg-QSG" y_axis_scale = "100" />
		<fig name="losses" caption=" " x_axis="time" y_axis="EvaluationLoss" methods="FedPollNMethodMNIST,FedPollMethodMNIST,FedAvgMethodMNIST,FedAvgQQSGDMethodMNIST" x_axis_title="Time(s)" y_axis_title="Loss Value" y_axis_scale = "1" labels="FedPoll-N,FedPoll-MM,FedAvg,FedAvg-QSG"/>
	</report>
</fedwork_cfg>
